<h1>New Cocktail</h1>

  <%= simple_form_for @cocktail do |f| %>
    <%= f.input :name, label: "Cocktail Name" %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>

  <%= f.submit "Add", class: 'btn btn-primary' %>
<% end %>

<%= link_to "back to cocktails list", cocktails_path %>
